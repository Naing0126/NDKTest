<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <com.example.user.ndktest.CameraPreview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraPreview" />

    <com.example.user.ndktest.FaceDetectorView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detectView"
        android:clickable="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/bottomlayout"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#5b1c85"
            android:id="@+id/base_right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#7b3fa3"
            android:layout_toRightOf="@+id/base_right"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#7b3fa3"
            android:layout_toLeftOf="@+id/base_left"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#5b1c85"
            android:id="@+id/base_left"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
        <ImageButton
            android:id="@+id/shutter"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/circle"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/shutterchange"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="#5b1c85"
            android:id="@+id/right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/check"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/coordinate_check"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="#7b3fa3"
            android:id="@+id/left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/coordinate_back"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/donelayout"
        android:background="#7f000000"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/done"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/coordinate_done"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true" />
        
        <TextView
            android:id="@+id/donetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="@string/setting"
            android:layout_below="@+id/done"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/textview"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#B2333333"
        android:text="@string/back"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_above="@+id/bottomlayout"/>
</RelativeLayout>
